//////////////////// GENERAL

wizard_blue = rgb(47,115,183)
success_green = rgb(50, 168, 82)

*
	font-family 'Quicksand', sans-serif
	
html
body
#react-target
	height 100%

#react-target
	display flex
	justify-content center
	align-items center
	padding 0 20px

.wizards-title
	font-size 50px
	margin 0 0 30px

body
	font-family 'Quicksand', sans-serif
	margin 0

h1
	margin 0 0 50px

.btn
	width 300px
	height 50px
	background-color wizard_blue
	border-radius 5px
	color white
	font-size 28px
	cursor pointer
	padding-left 30px
	padding-right 30px
	border 1px solid wizard_blue

	&.inline
		width auto
		margin-left 10px
	
	&:disabled
		background-color gray
		border 1px solid gray
		
	&:focus
		outline none
		background-color darken(wizard_blue, 30%)

////////////////////// HOST

.host-app-container
	display flex
	text-align center

img
	margin-bottom 25px
	width 200px

.players-list
	margin-bottom 50px

.game-code
	display inline-block
	font-size 48px
	font-weight bold
	border 1px solid black
	padding 20px
	margin-bottom 30px
	border-radius 8px
	
.gameplay-gamecode
	position absolute
	top 20px
	right 20px
	text-align right

.scoreboard
	display table
	width 100%
	margin-bottom 30px
	font-size 24px

.player-bid
	display table-row
	
.scoreboard-player-name
	width 60%
	text-align left

.scoreboard-player-name
.round-score
.total-score
	display table-cell
	padding-bottom 20px
	
.round-score.met
	color success_green
	
.round-score.missed
	color red

.trump-card
	display flex
	align-items center
	justify-content center
	margin-bottom 30px
	flex-wrap wrap
	
	p
		flex-grow 1
		width 100%

.player-cards-container
	display flex
	justify-content space-between
	justify-content center
	
.player-card-container
	padding 0 30px
	width 90px
	display flex
	flex-direction column
	align-items center

.player-card
	margin-bottom 20px

// copied from card.css	
.placeholder-card
	width 60px
	height 100px
	border-radius 8px
	background-color lighten(#eee, 70%)
	border 1px dashed gray
	padding 4px
	display flex
	
	&.is-active
		border 3px dashed orange
		
	
.active-player-indicator
	justify-content center
	align-items center
	width 100%
	font-size 24px
	display flex
	color orange
	
.card
	.player-card.is-winner &
			border 5px solid success_green		

.bid
	margin-bottom 20px

trick_display_size = 20px
extra_trick_color = darken(red, 20%)
unmet_trick_color = lighten(wizard_blue, 70%)
.trick
	display inline-flex
	width trick_display_size
	height trick_display_size
	border-radius trick_display_size
	margin-right 5px
	background-color unmet_trick_color
	border 1px solid unmet_trick_color

	&.met
		background-color wizard_blue
		border 1px solid wizard_blue
	
	&.extra
		background-color extra_trick_color
		border 1px solid extra_trick_color

	////////////////////// PLAYER

.player-app-container
	display flex
	align-items center
	justify-content center
	text-align center
	padding 0 20px	

// avoid header bouncing around when pre-move shows/hides
.player-hand-screen
	min-height 380px

input
	width 270px
	height 50px
	margin-bottom 15px
	padding 0 15px
	font-size 24px
	border-radius 5px
	box-shadow none
	border 1px solid #cccccc
	
	&.inline
		width 170px
	
	&:focus
		border 1px solid wizard_blue
		outline none

.host-link
	margin-top 30px

card_overlap_width = 30px
.player-hand
	display flex	
	margin-left card_overlap_width	
	margin-bottom 30px
	height 100px
	justify-content center
	
	// hide right half when cards are overlapping in hand
	.clickable-card:not(:last-child) .card-br
		display none
		
	.card
		margin-left -1 * card_overlap_width
	
.clickable-card
	&.is-active
		margin-top -20px
		transition 300ms ease
		
		.card
			border 3px solid orange

	&.is-clickable:hover
		cursor pointer

.player-waiting-screen
.round-complete-status
	font-size 24px

.status
	font-size 24px
	height 24px
	margin-bottom 50px

.player-hand
	margin-bottom 50px